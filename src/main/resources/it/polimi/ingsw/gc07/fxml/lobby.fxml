<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="it.polimi.ingsw.gc07.view.gui.gui_controllers.LobbyController"
            prefHeight="700.0" prefWidth="1200.0">
    <ImageView AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0" fitHeight="720.0" fitWidth="1220.0">
        <Image url="@../graphic_resources/legnobg.jpeg"/>
    </ImageView>
    <AnchorPane AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" prefHeight="700.0" prefWidth="1200.0">
        <RadioButton fx:id="newGame" onAction="#clickedNew" AnchorPane.topAnchor="200" AnchorPane.leftAnchor="100" mnemonicParsing="false" text="NEW GAME">
           <font>
               <Font name="System Bold" size="33.0" />
           </font>
        </RadioButton>
        <RadioButton fx:id="joinGame" onAction="#clickedJoin" AnchorPane.topAnchor="200" AnchorPane.rightAnchor="100" mnemonicParsing="false" text="JOIN EXISTING GAME">
            <font>
                <Font name="System Bold" size="33.0" />
            </font>
        </RadioButton>
        <Button AnchorPane.bottomAnchor="80" AnchorPane.leftAnchor="80" mnemonicParsing="false" prefHeight="88.0"
            prefWidth="267.0" onAction="#onExitButtonClick" text="EXIT" textFill="red">
            <font>
                <Font name="System Bold" size="33.0" />
            </font>
        </Button>
        <Button fx:id="next" visible="false" AnchorPane.bottomAnchor="80" AnchorPane.rightAnchor="80" mnemonicParsing="false" prefHeight="88.0"
                prefWidth="267.0" onAction="#onContinueButtonClick" text="CONTINUE">
            <font>
                <Font name="System Bold" size="30.0" />
            </font>
        </Button>
    </AnchorPane>
</AnchorPane>