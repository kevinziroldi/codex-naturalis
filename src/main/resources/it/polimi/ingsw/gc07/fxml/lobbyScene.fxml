    <AnchorPane fx:id="screenPane" prefHeight="700.0" prefWidth="1200.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">

        <AnchorPane fx:id="joinPane" visible="false" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <Text fill="black" text="LIST OF EXISTING GAMES:" AnchorPane.leftAnchor="50" AnchorPane.topAnchor="50">
            <font>
                <Font name="System Bold" size="33.0" />
            </font>
        </Text>

        <ListView fx:id="gameList" prefHeight="440.0" prefWidth="400.0" AnchorPane.leftAnchor="50" AnchorPane.topAnchor="100" />

        <Text fill="black" text="INSERT THE GAME ID:" AnchorPane.leftAnchor="550" AnchorPane.topAnchor="200">
            <font>
                <Font name="System Bold" size="33.0" />
            </font>
        </Text>

        <TextField fx:id="gameId" nodeOrientation="RIGHT_TO_LEFT" onKeyPressed="#cleanErrGameId" prefHeight="35" prefWidth="300" AnchorPane.leftAnchor="550" AnchorPane.topAnchor="260">
