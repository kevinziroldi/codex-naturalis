                    <Font name="System Bold" size="33.0" />
                </font>
            </Text>

            <TextField fx:id="numPlayers" nodeOrientation="RIGHT_TO_LEFT" onKeyPressed="#cleanErrNumPlayer" prefHeight="35" prefWidth="300" AnchorPane.leftAnchor="550" AnchorPane.topAnchor="260">
                <font>
                    <Font size="20.0" />
                </font>
            </TextField>

        </AnchorPane>

        <Text fx:id="errGameId" fill="red" text="WRONG GAME ID" visible="false" AnchorPane.leftAnchor="550" AnchorPane.topAnchor="235">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Text>

        <Text fx:id="textTokenColor" fill="black" text="INSERT THE TOKEN COLOR:" visible="false" AnchorPane.leftAnchor="550" AnchorPane.topAnchor="330">
            <font>
                <Font name="System Bold" size="33.0" />
            </font>
        </Text>

