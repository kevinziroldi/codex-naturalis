            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Text>

        <Text fx:id="errNumPlayer" fill="red" text="WRONG NUMBER OF PLAYERS" visible="false" AnchorPane.leftAnchor="550" AnchorPane.topAnchor="235">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Text>

        <TextField fx:id="tokenColor" nodeOrientation="RIGHT_TO_LEFT" onKeyPressed="#cleanErrTokenColor" prefHeight="35" prefWidth="300" visible="false" AnchorPane.leftAnchor="550" AnchorPane.topAnchor="390">
            <font>
                <Font size="20.0" />
            </font>
        </TextField>

        <Button fx:id="next" mnemonicParsing="false" onAction="#onContinueButtonClick" prefHeight="68.0" prefWidth="267.0" text="CONTINUE" visible="false" AnchorPane.bottomAnchor="30" AnchorPane.rightAnchor="50">
