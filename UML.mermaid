    %% --------------------------------
    %% Enumerations
    %% --------------------------------
    class CardType {
        <<enumeration>>
        RESOURCE_CARD
        GOLD_CARD
        STARTER_CARD
        OBJECTIVE_CARD
    }
    class ConditionType {
        <<enumeration>>
        LAYOUT_CONDITION
        ITEM_CONDITION
        CORNER_COVERAGE_CONDITION
    }
    class GameObject {
        <<enumeration>>
        QUILL
        INKWELL
        MANUSCRIPT
    }
    class GameResource {
        <<enumeration>>
        PLANT
        ANIMAL
        FUNGI
        INSECT
    }
    class GameState{
        <<enumeration>>
        WAITING_PLAYERS
        PLAYING
        GAME_ENDED
    }
    class TokenColor {
        <<enumeration>>
        BLUE
        GREEN
        RED
        YELLOW
    }
    class GameItem {
        <<interface>>
    }
    GameItem <|.. GameResource
    GameItem <|.. GameObject

